<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".visao.CriarContaActivity">

    <TextView
        android:id="@+id/criandoContaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frase_criando_conta"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/novoUsuarioEditText"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="303dp"
        android:layout_height="47dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/frase_nome_usuario"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeContaEditText"
        app:layout_constraintVertical_bias="0.029" />

    <EditText
        android:id="@+id/novaSenhaEditText"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="303dp"
        android:layout_height="47dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/frase_nova_senha"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/novoUsuarioEditText"
        app:layout_constraintVertical_bias="0.034" />

    <Spinner
        android:id="@+id/pergSegurancaSpinner"
        android:layout_width="303dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pergSegurancaTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/pergSegurancaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frase_pergunta_seguranca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/novaSenhaEditText"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/suaRespostaPergSegTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frase_sua_resposta_perg_seguranca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pergSegurancaSpinner"
        app:layout_constraintVertical_bias="0.022" />

    <EditText
        android:id="@+id/respPergSegurancaTextView"
        android:layout_width="303dp"
        android:layout_height="100dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/frase_insira_sua_resp_perg_seguranca"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suaRespostaPergSegTextView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/criarContaButton"
        android:layout_width="303dp"
        android:layout_height="47dp"
        android:text="@string/frase_salvar_conta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/respPergSegurancaTextView"
        app:layout_constraintVertical_bias="0.067" />

    <EditText
        android:id="@+id/nomeContaEditText"
        android:layout_width="303dp"
        android:layout_height="47dp"
        android:layout_marginBottom="472dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/frase_nome_conta"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>